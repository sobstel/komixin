<div class="auth-form">
<h2>Rejestracja</h2>

<%= form_for(resource, :as => resource_name, :url => :sign_up) do |f| %>
  <%= error_messages(resource) %>

  <p><%= f.label :username, "Login" %><br />
  <%= f.text_field :username %></p>

  <p><%= f.label :email, "E-mail" %><br />
  <%= f.text_field :email %></p>

  <p><%= f.label :password, "Hasło" %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, "Powtórz hasło" %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Zarejestruj się" %></p>
  <p><%= link_to "Wyślij ponowne potwierdzenie rejestracji", new_confirmation_path(resource_name) %></p>
<% end %>
</div>